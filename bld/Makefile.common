CC	:= gcc
CFLAGS	:= -g -Wall -ggdb3 -Werror
#OPT	:= -O4
EE	:= $(CC) -E
LST	:= $(CC) -c $(CFLAGS) -Wa,-a,-ad 
LDFLAGS	:= -pthread -rt

# cancel implicit program rule
%.o: %.c $(DEPS)
	@echo $(CC) $(OPT) $(CFLAGS) $< 
	@$(CC) $(OPT) $(INCLUDES) $(CFLAGS) -c -o $@ $<

%.i: %.c $(DEPS)
	$(EE) $(OPT) $(INCLUDES) $(CFLAGS) $< > $@

%.lst: %.c
	$(LST) $(OPT) $< > $@

.PHONY: clean
clean:
	@rm -f  $(OBJS) *~

